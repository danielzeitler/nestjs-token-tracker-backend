// Address line 1
// Address line 2
// City
// Province/State
// Zip/Postal Code

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique

  NFTs IDs[]
  Gifts Gift[]

  @@map("users")
}

enum Item {
  TSHIRT
  SOCKS
}

// Size
model Gift {
  id Int @id @default(autoincrement())
  itemType Item @default(TSHIRT)
  size String
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("Gifts")
}

model IDs {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  nft Int

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("NFTs")
}
